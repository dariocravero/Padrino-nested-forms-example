.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:people, :index)
      %li=link_to pat(:new), url(:people, :new)
      %li.active=link_to pat(:edit), url(:people, :edit, :id => @person.id)
  .content
    %h2.title
      =pat(:edit)
      =mt(:person)
    .inner
      -form_for :person, url(:people, :update, :id => @person.id), :method => :put, :class => :form do |f|
        =partial "people/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")